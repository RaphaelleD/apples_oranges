	author = {Solmi, Marco and Radua, Joaquim and Olivola, Miriam and Croce, Enrico and Soardo, Livia and Salazar de Pablo, Gonzalo and Il Shin, Jae and Kirkbride, James B. and Jones, Peter and Kim, Jae Han and Kim, Jong Yeob and Carvalho, Andrè F. and Seeman, Mary V. and Correll, Christoph U. and Fusar-Poli, Paolo},
	month = jan,
