@article{marcoDelayRewardChoice2009,
	title = {Delay and reward choice in {ADHD}: an experimental test of the role of delay aversion},
	volume = {23},
	issn = {1931-1559},
	shorttitle = {Delay and reward choice in {ADHD}},
	url = {https://doi.org/10.1037/a0014914},
