	journal = {Cerebral Cortex (New York, NY)},
	author = {Buhle, Jason T. and Silvers, Jennifer A. and Wager, Tor D. and Lopez, Richard and Onyemekwu, Chukwudi and Kober, Hedy and Weber, Jochen and Ochsner, Kevin N.},
