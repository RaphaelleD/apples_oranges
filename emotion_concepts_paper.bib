	keywords = {Generalization, Linear mixed-effects models, Monte Carlo simulation, Statistics},
	pages = {255--278},
	file = {Accepted Version:files/1151/Barr et al. - 2013 - Random effects structure for confirmatory hypothes.pdf:application/pdf;ScienceDirect Snapshot:files/1150/S0749596X12001180.html:text/html},
}

