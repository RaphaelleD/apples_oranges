	keywords = {Motivation, Choice Behavior, Models, Psychological, Animals, Reward, Dopamine, Rats, Reinforcement, Psychology, Brain, Conditioning, Operant, Neurotransmitter Agents, Reaction Time, Reinforcement Schedule},
