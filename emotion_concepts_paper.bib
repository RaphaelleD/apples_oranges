	author = {Kendler, Kenneth S.},
	month = feb,
	year = {2016},
	pmid = {26833596},
	pmcid = {PMC4780286},
	keywords = {Psychiatric disorders, constructivism, DSM-5, homeostatic property clusters, ICD-10, pragmatism, realism},
	pages = {5--12},
	file = {Full Text:files/1454/Kendler - 2016 - The nature of psychiatric disorders.pdf:application/pdf},
