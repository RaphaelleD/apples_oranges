	keywords = {Adolescent, Child, Female, Humans, Male, Mental Disorders, Psychiatric Status Rating Scales, Psychometrics, Reproducibility of Results, Surveys and Questionnaires, Follow-Up Studies, London, Sampling Studies, Psychological, Preschool, Computer-Assisted, Diagnosis, Differential, Interview},
